<div  id="Brown" class="row card-panel red lighten-3">
    <div class="col s12 m4 l2 center-align" id="side-bar">

          <!-- side-bar -->
        <h4 class="grey-text text-lighten-5">Color:</h4>
        <a class="waves-effect waves-light brown darken-1 btn" href="/color" style="margin-top: 10px; display: block;">Brown</a>
    </div>

    <div class="col s12 m8 l10">
        <div class="row">
            
                {{#each furniture as |f|}}
                {{#ifEquals f.color "Brown"}}
                
                {{> brown-details f}}
                
                {{/ifEquals}}
                {{/each}}
            
            
        </div>
    </div> 

</div>

